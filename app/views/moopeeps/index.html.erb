<p id="notice"><%= notice %></p>
  <div class="row">

  <h1>Listing Moopeeps</h1>

  </div>
<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Username</th>
          <th>Firstname</th>
          <th>Surname</th>
          <th>Email</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @moopeeps.each do |moopeep| %>
          <tr>
            <td><%= moopeep.username %></td>
            <td><%= moopeep.firstname %></td>
            <td><%= moopeep.surname %></td>
            <td><%= moopeep.email %></td>
            <td><%= link_to 'Show', moopeep, class: 'btn btn-mini' %></td>
            <td><%= link_to 'Edit', edit_moopeep_path(moopeep), class: 'btn btn-mini btn-success' %></td>
            <td><%= link_to 'Destroy', moopeep, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

